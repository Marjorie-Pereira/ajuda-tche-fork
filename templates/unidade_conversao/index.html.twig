{% extends 'base.html.twig' %}

{% block title %}UnidadeConversao index{% endblock %}

{% block body %}
    <h1>UnidadeConversao index</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary">{{ button_label|default('Buscar') }}</button>
    {{ form_end(form) }}


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descricao</th>
                <th>Valor</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for unidade_conversao in pager %}
            <tr>
                <td>{{ unidade_conversao.id }}</td>
                <td>{{ unidade_conversao.descricao }}</td>
                <td>{{ unidade_conversao.valor }}</td>
                <td>
                    <a href="{{ path('app_unidade_conversao_show', {'id': unidade_conversao.id}) }}">show</a>
                    <a href="{{ path('app_unidade_conversao_edit', {'id': unidade_conversao.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center mt-3 mb-5">
        {% if is_granted('UNIDADE_CONVERSAO_ADD') %}
        <a href="{{ path('app_unidade_conversao_new') }}" class="btn btn-success shadow-sm">
            <i class="fas fa-plus"></i> Adicionar
        </a>
        {% endif %}
        <div>{{ pagerfanta(pager) }}</div>
    </div>

{% endblock %}
