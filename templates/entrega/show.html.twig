{% extends 'base.html.twig' %}

{% block title %}Entrega{% endblock %}

{% block body %}



    <div class="container mt-5 p-5">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h2 class="font-weight-bold">Entrega</h2>
            <div class="d-flex gap-2 align-items-center">
                <a href="{{ path('app_entrega_index') }}" class="btn btn-primary shadow m-1"><i
                        class="fa fa-arrow-left"></i> Voltar</a>
                <a href="{{ path('app_entrega_edit', {'id': entrega.id}) }}" class="btn btn-secondary shadow m-1"><i
                        class="fas fa-pencil"></i></a>
                        {{ include('entrega/_delete_form.html.twig') }}
    
            </div>
        </div>
    
        <div class="card shadow-lg">
            <div class="card-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ entrega.id }}</td>
                        </tr>
                        <tr>
                            <th>Motorista</th>
                            {% if entrega.motorista is not null %}
                                <td>{{ entrega.motorista.nome }}</td>
                            {% else %}
                                <td></td>
                            {% endif %}
                        </tr>
                        <tr>
                            <th>Posto Destino</th>
                            {% if entrega.postoAjudaDestino is not null %}
                                <td>{{ entrega.postoAjudaDestino.descricao }}</td>
                            {% else %}
                                <td></td>
                            {% endif %}
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <br>
        <h2>Produtos</h2>

        <div class="card shadow-lg">
            <div class="card-body">
                <table class="table">
                    <thead>
                        <th>Produto</th>
                        <th>Quantidade</th>
                        <th>Tipo Unidade</th>
                    </thead>
                    <tbody>
                        {% for produtoEntrega in entrega.produtoEntregas %}
                            <tr>
                                <th>{{ produtoEntrega.produto.descricao }}</th>
                                <th>{{ produtoEntrega.quantidade }}</th>
                                <th>{{ produtoEntrega.produto.unidadeArmazenamento.descricao }}</th>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>


    </div>
{% endblock %}
